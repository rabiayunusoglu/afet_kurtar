<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Create_Disaster_Event_On_Map">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Afet Bilgileri:"
            android:paddingLeft="12dp"
            android:textSize="25sp"
            android:layout_gravity="left"
            android:layout_weight="1">
        </TextView>
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:id="@+id/mainDisasterSpinner">

        </Spinner>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afet ID:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetIDLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_id"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afet Parçası İsmi:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetSubpartLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_subpart_name"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afet Parçası ID:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetSubpartIDLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_subpart_ID"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afet Adresi:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetAdressLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_address"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afet Enlem Bilgisi:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetLatitudeLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_latitude"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Afet Boylam Bilgisi:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetLongitudeLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_longitude"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kayıp İnsan Sayısı:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetMissingPersonLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_missing_person"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kurtarılan İnsan Sayısı:"
        android:paddingLeft="16dp"
        android:textSize="10sp">
    </TextView>

    <LinearLayout
        android:id="@+id/AfetRescuedPersonLayout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/afet_rescued_person"
            android:textSize="12dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/AfetIsOpenForVolunteersLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Gönüllülere Açık Mı:"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <RadioGroup
            android:id="@+id/groupForVolunteers"
            android:orientation="horizontal"
            android:paddingLeft="90dp"
            android:paddingRight="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <RadioButton
                android:id="@+id/btnforVolunteerYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="EVET"
                android:textSize="10sp"/>

            <RadioButton
                android:id="@+id/btnforVolunteerNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="HAYIR"
                android:textSize="10sp"/>

        </RadioGroup>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        android:id="@+id/AfetBilgiOlusturLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        tools:ignore="MissingConstraints">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Oluştur"
            android:textColor="#000"
            android:background="#1212"
            android:id="@+id/btn_createDisaster">
            </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sıfırla"
            android:textColor="#000"
            android:background="#6767"
            android:id="@+id/btn_resetButton"

            >
        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Koordinatlar "
            android:id="@+id/coordinateText"
            android:textColor="#000"
            android:paddingLeft="10dp"
            android:textSize="20sp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_disaster_event_map"
            android:layout_weight="1"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KONUM"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_weight="0">
        </TextView>

    </LinearLayout>



</LinearLayout>