<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/authorized_aut_smart_assign_subpart_layout"
    android:background="#BFBFBF"
    tools:context=".Authorized_SmartAssign_Subpart">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <include layout="@layout/activity_tool_bar"></include>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seçilen Afet: "
            android:paddingLeft="16dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_weight="0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:ignore="MissingConstraints">

            <Spinner
                android:id="@+id/edit_smart_assign_main_disaster_select_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:background="#FFF"
                android:layout_weight="1"></Spinner>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0"></Space>



        <LinearLayout
            android:id="@+id/lin_lay_editTexts_smart_assign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seçilecek Subpart Sayısı:"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_weight="1">
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_smartAssign_wantedNumberOfSubpart"
                android:textSize="20dp"
                android:textColor="#000"
                android:background="#FFF"
                android:inputType="number"
                android:layout_weight="1"
                />
            </LinearLayout>
            <Space
                android:layout_width="20dp"
                android:layout_height="match_parent">
            </Space>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Gerekli İnsan Gücü:">
                </TextView>

                <EditText
                    android:id="@+id/et_smartAssign_wantedNumberOfManPower"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFF"
                    android:inputType="number"
                    android:textColor="#000"
                    android:textSize="20dp" />
            </LinearLayout>
            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </Space>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp">

                </Space>

                <Button
                    android:id="@+id/btn_smartAssign_calculateHowManySubpart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#826DA6"
                    android:text="Tamam"
                    android:textColor="#FFF"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/authorized_smart_assign_scrollview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="2dp"
            android:background="#BFBFBF"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/aut_smart_assign_linearLayoutScroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

            </LinearLayout>


        </ScrollView>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/aut_smart_assign_subpart_map"
                android:layout_weight="1"
                android:name="com.google.android.gms.maps.SupportMapFragment" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KONUM"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_weight="0">
            </TextView>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0"></Space>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:ignore="MissingConstraints">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Algoritmayı çalıştır"
                android:textSize="8dp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:background="#6464"
                android:textStyle="bold"
                android:id="@+id/btn_smart_Assign">
            </Button>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">

        </Space>
        <LinearLayout
            android:id="@+id/aut_smart_assign_accept_reject_layout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            tools:ignore="MissingConstraints">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Onaylıyorum"
                android:textSize="8dp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:background="#000"
                android:textStyle="bold"
                android:id="@+id/btn_smart_assign_accept">
            </Button>

            <Space
                android:layout_width="50dp"
                android:layout_height="match_parent">
            </Space>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="İptal"
                android:textSize="8dp"
                android:textColor="#FFF"
                android:layout_weight="1"
                android:background="#000"
                android:textStyle="bold"
                android:id="@+id/btn_smart_assign_reject">
            </Button>


        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp">
        </Space>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white">
        <include
            layout="@layout/activity_authorized_nav_drawer"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>